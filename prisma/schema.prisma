generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id         String     @id @default(cuid())
  title      String?
  content    String?
  conditionRating  Int?
  conditionInfo String?
  published  Boolean?    @default(true)
  publishedOn DateTime?
  expiredOn DateTime?
  authorId   String?
  price      Int?
  location   String?
  images     Image[]
  author     User?      @relation(fields: [authorId], references: [id])
  comments   Comment[]
  categories Category[]
  createdAt DateTime  @default(now()) @map("created_at")

}

model Image {
  id        String  @id @default(cuid())
  secureUrl String?
  width     Int?
  height    Int?
  publicId  String  @unique
  versionId String?
  resourceType String?
  bytes     Int?
  url       String?
  format    String?
  version   String?
  post      Post?   @relation(fields: [postId], references: [id])
  postId    String?
}

model Comment {
  id       String  @id @default(cuid())
  createdAt DateTime  @default(now()) @map("created_at")
  content  String
  author   User?   @relation(fields: [authorId], references: [id])
  authorId String?
  post     Post?   @relation(fields: [postId], references: [id])
  postId   String?
  parent_comment_id String?
  
}

